
<div class="navbar-wagon">
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <a href=<%= cocktails_path%> class="navbar-wagon-item navbar-wagon-link">Home</a>
    <a href=<%= new_cocktail_path%> class="navbar-wagon-item navbar-wagon-link">Craft</a>
    <a href="" class="navbar-wagon-item navbar-wagon-link">Ingredients</a>
  </div>
</div>
<div class="container">
  <div>
    <dl class="cocktail-name"> <%= @cocktail.name %>
      <% @cocktail.doses.each do |dose| %>
        <dt class="dose-ingredient"><%= dose.ingredient.name %></dt>
        <dd class="dose-description"><%= dose.description %></dd>
        <%= link_to cocktail_dose_path(@cocktail, dose), method: :delete do %>
          <i class="fa fa-trash-o" aria-hidden="true"></i>
        <% end %>
      <% end %>
    </dl>
  </div>
  <div>
    <h3><%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %></h3>
  </div>
</div>







