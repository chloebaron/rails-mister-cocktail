<!-- navbar -->
<div class="container">
  <h1> <%= @cocktail.name %> </h1>
    <% @cocktail.doses.each do |dose| %>
      <h3><%= dose.description %></h3>
      <h3><%= dose.ingredient.name %></h3>
    <% end %>
    <%= link_to cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fa fa-trash-o" aria-hidden="true"></i>
      <% end %>
  <p><%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %></p>
</div>




